Bootstrap: docker
From: nvidia/cuda:11.3.1-cudnn8-runtime-ubuntu18.04
Stage: spython-base

%files
environment.yml /opt/openfold/environment.yml
openfold /opt/openfold/openfold
scripts /opt/openfold/scripts
run_pretrained_openfold.py /opt/openfold/run_pretrained_openfold.py
train_openfold.py /opt/openfold/train_openfold.py
setup.py /opt/openfold/setup.py
lib/openmm.patch /opt/openfold/lib/openmm.patch
%labels
org.opencontainers.image.version = "1.0.0"
org.opencontainers.image.authors = "Gustaf Ahdritz"
org.opencontainers.image.source = "https://github.com/aqlaboratory/openfold"
org.opencontainers.image.licenses = "Apache License 2.0"
org.opencontainers.image.base.name="docker.io/nvidia/cuda:10.2-cudnn8-runtime-ubuntu18.04"
%post

# metainformation

apt-key del 7fa2af80
apt-key adv --fetch-keys https://developer.download.nvidia.com/compute/cuda/repos/ubuntu1804/x86_64/7fa2af80.pub
apt-key adv --fetch-keys https://developer.download.nvidia.com/compute/cuda/repos/ubuntu1804/x86_64/3bf863cc.pub

apt-get update && apt-get install -y wget libxml2 cuda-minimal-build-11-3 libcusparse-dev-11-3 libcublas-dev-11-3 libcusolver-dev-11-3  cmake git aria2 && which cmake && cmake --version
wget -P /tmp \
"https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-x86_64.sh" \
&& bash /tmp/Miniconda3-latest-Linux-x86_64.sh -b -p /opt/conda \
&& rm /tmp/Miniconda3-latest-Linux-x86_64.sh
PATH=/opt/conda/bin:$PATH


# installing into the base environment since the docker container wont do anything other than run openfold
conda env update -n base --file /opt/openfold/environment.yml && conda clean --all

wget -q -P /opt/openfold/openfold/resources \
https://git.scicore.unibas.ch/schwede/openstructure/-/raw/7102c63615b64735c4941278d92b554ec94415f8/modules/mol/alg/src/stereo_chemical_props.txt
# Certain tests need access to this file
#cd /opt/openfold  && \
#mkdir -p tests/test_data/alphafold/common && \
#ln -rs openfold/resources/stereo_chemical_props.txt tests/test_data/alphafold/common

cd /opt/openfold && \
 python -m pip install awscli &&  \
echo "Downloading OpenFold parameters..." &&  \
bash scripts/download_openfold_params.sh openfold/resources &&  \
echo "Downloading AlphaFold parameters..." && \
bash scripts/download_alphafold_params.sh openfold/resources  &&  \
# Decompress test data
gunzip tests/test_data/sample_feats.pickle.gz

patch -p0 -d /opt/conda/lib/python3.7/site-packages/ < /opt/openfold/lib/openmm.patch
mkdir -p /opt/openfold
cd /opt/openfold
python3 setup.py install

#install mmseqs

cd /opt  && \
git clone --depth=1 https://github.com/soedinglab/MMseqs2.git  && \
cd MMseqs2  && \
mkdir -p build  && \
cd build  && \
cmake -DCMAKE_INSTALL_PREFIX:PATH=/opt/conda ../  && \
make -j3  && \
make install
#install flash
cd /opt && \
wget https://github.com/HazyResearch/flash-attention/tarball/5b838a8bef -O flash-att.tar.gz && \
tar xzf flash-att.tar.gz && \
cd HazyResearch-flash-attention-*  && \
python3 -m pip install torch && \
python3 setup.py install
# install pyindex
python3 -m pip install nvidia-pyindex
%environment
export PATH=/opt/conda/bin:$PATH
%runscript
cd /opt/openfold
exec /bin/bash "$@"
%startscript
cd /opt/openfold
exec /bin/bash "$@"
