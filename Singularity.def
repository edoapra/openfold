Bootstrap: docker
From: nvidia/cuda:11.3.1-cudnn8-runtime-ubuntu18.04
Stage: spython-base

%files
environment.yml /opt/openfold/environment.yml
openfold /opt/openfold/openfold
scripts /opt/openfold/scripts
run_pretrained_openfold.py /opt/openfold/run_pretrained_openfold.py
train_openfold.py /opt/openfold/train_openfold.py
setup.py /opt/openfold/setup.py
lib/openmm.patch /opt/openfold/lib/openmm.patch
%labels
maintainer  Edoardo Apra <edoardo.apra@pnnl.gov>
org.opencontainers.image.version  "1.0.0"
org.opencontainers.image.authors  "Gustaf Ahdritz & Edoardo Apra"
org.opencontainers.image.source  "https://github.com/aqlaboratory/openfold"
org.opencontainers.image.licenses  "Apache License 2.0"
org.opencontainers.image.description "Singularity image for OpenFold"
%post
CUDA=11.3
SINGULARITY_CUDA=11.3
CUDA_V1=11
CUDA_V2=3
# metainformation

apt-key del 7fa2af80
apt-key adv --fetch-keys https://developer.download.nvidia.com/compute/cuda/repos/ubuntu1804/x86_64/7fa2af80.pub
apt-key adv --fetch-keys https://developer.download.nvidia.com/compute/cuda/repos/ubuntu1804/x86_64/3bf863cc.pub

apt-get update && DEBIAN_FRONTEND=noninteractive apt-get install -y wget libxml2 cuda-minimal-build-${CUDA_V1}-${CUDA_V2} libcusparse-dev-${CUDA_V1}-${CUDA_V2} libcublas-dev-${CUDA_V1}-${CUDA_V2} libcusolver-dev-${CUDA_V1}-${CUDA_V2}  cmake git aria2 && which cmake && \
 rm -rf /var/lib/apt/lists/* && \
 apt-get autoremove -y && \
 apt-get clean && \
cmake --version

MYPREFIX=/opt/conda
export MAMBA_ROOT_PREFIX=$MYPREFIX
#    export MAMBA_ROOT_PREFIX=/opt/conda
    MINIFORGE3=Miniforge3-Linux-x86_64.sh
    wget -q -P /tmp  https://github.com/conda-forge/miniforge/releases/latest/download/$MINIFORGE3
    bash /tmp/$MINIFORGE3 -b -u -p $MYPREFIX
    rm -f /tmp/$MINIFORGE3
PATH=$MYPREFIX/bin:$PATH


# installing into the base environment since the docker container wont do anything other than run openfold
export CONDA_FETCH_THREADS=2 # parallel download for recent conda versions
export MAX_JOBS=2 # ninja workers
conda config --set  fetch_threads 2 || true && \
#conda env update -n base --file /opt/openfold/environment.yml && conda clean --all
    export PATH="$MYPREFIX/bin:$PATH"
    eval "$($MYPREFIX/bin/conda shell.dash hook)"
      conda install -y -c conda-forge micromamba
      eval "$(micromamba shell hook --shell dash)"
      micromamba create -c conda-forge -y -n openfold_venv -r $MAMBA_ROOT_PREFIX -f /opt/openfold/environment.yml
#      conda install python=3.9
      micromamba update -c conda-forge -y -r $MAMBA_ROOT_PREFIX  -f /opt/openfold/environment.yml
      echo "ls -l $MAMBA_ROOT_PREFIX/envs" `ls -l  $MAMBA_ROOT_PREFIX/envs`
      echo "ls -l $MAMBA_ROOT_PREFIX/envs/openfold_venv" `ls -l  $MAMBA_ROOT_PREFIX/envs/openfold_venv` || true
      micromamba activate $MAMBA_ROOT_PREFIX/envs/openfold_venv

# we rely on openfold/openfold/resources being external from the container
#wget -q -P /opt/openfold/openfold/resources \
#https://git.scicore.unibas.ch/schwede/openstructure/-/raw/7102c63615b64735c4941278d92b554ec94415f8/modules/mol/alg/src/stereo_chemical_props.txt
## Certain tests need access to this file
##cd /opt/openfold  && \
##mkdir -p tests/test_data/alphafold/common && \
##ln -rs openfold/resources/stereo_chemical_props.txt tests/test_data/alphafold/common
#
#cd /opt/openfold && \
# python -m pip install awscli &&  \
#echo "Downloading OpenFold parameters..." &&  \
#bash scripts/download_openfold_params.sh openfold/resources &&  \
#echo "Downloading AlphaFold parameters..." && \
#bash scripts/download_alphafold_params.sh openfold/resources  &&  \
## Decompress test data
#gunzip tests/test_data/sample_feats.pickle.gz
echo 'ls -lrt $MAMBA_ROOT_PREFIX/envs/openfold_venv/lib|grep python' `ls -lrt $MAMBA_ROOT_PREFIX/envs/openfold_venv/lib|grep python`
PY3_MINORV=$(python3 -V |cut -d ' ' -f 2 |cut -d '.' -f 2)
patch -p0 -d $MAMBA_ROOT_PREFIX/envs/openfold_venv/lib/python3."$PY3_MINORV"/site-packages/ < /opt/openfold/lib/openmm.patch
mkdir -p /opt/openfold
cd /opt/openfold
python3 setup.py install

#install mmseqs

cd /opt  && \
git clone --depth=1 https://github.com/soedinglab/MMseqs2.git  && \
cd MMseqs2  && \
mkdir -p build  && \
cd build  && \
cmake -DCMAKE_INSTALL_PREFIX:PATH=/opt/conda ../  && \
make -j3  && \
make install && \
cd ../.. && \
rm -rf MMseqs2 && \
#install flash
cd /opt && \
git clone https://github.com/HazyResearch/flash-attention && \
cd flash-attention && \
git checkout 5b838a8bef &&  \
python3 setup.py install && \
cd .. && \
rm -rf flash-attention && \
# install pyindex
python3 -m pip install nvidia-pyindex && \
# size
 conda clean --all --force-pkgs-dirs --yes && \
 find /opt/conda/ -follow -type f -name '*.a' -delete && \
 find /opt/conda/ -follow -type f -name '*.pyc' -delete && \
 find /opt/conda/ -follow -type f -name '*.js.map' -delete && \
 find /opt/conda/ -follow -type f -name '*.tex' -delete && \
 find /opt/conda/ -follow -type f -name '*.md' -delete && \
 find /opt/conda/ -follow -type f -name '*.ps' -delete && \
 find /opt/conda/ -follow -type f -name '*.pdf' -delete && \
 rm -f /opt/conda/lib/*avx512* || true && \
 strip /opt/conda/bin/* || true && \
 dpkg-query -Wf '${Installed-Size}\t${Package}\n' | sort -n | tail -n 100 && \
 df -h && \
 apt-get -y --allow-change-held-packages purge cmake cmake-data git manpages-dev  \
 libcublas-${CUDA_V1}-${CUDA_V2} libcusparse-${CUDA_V1}-${CUDA_V2} \
 libcudnn8 libnpp-${CUDA_V1}-${CUDA_V2} libcusolver-dev-${CUDA_V1}-${CUDA_V2} cuda-nvcc-${CUDA_V1}-${CUDA_V2} || true && \
 apt-get -y  autoremove && \
 apt update && \
 apt-get -y install libgomp1:amd64  && \
 apt-get clean && \
 rm -rf /var/cache && \
 find /usr/local/cuda-${CUDA_V1}.${CUDA_V2} -follow -type f -name 'lib*.a' -delete && \
 find /usr/local/cuda-${CUDA_V1}.${CUDA_V2} -follow -type f -name '*.h' -delete && \
 rm -rf /usr/local/cuda-${CUDA_V1}.${CUDA_V2}/nvvm* && \
 echo '/opt/conda size' `du -sh /opt/conda` && \
 echo 'MAMBA_ROOT_PREFIX' `du -sh $MAMBA_ROOT_PREFIX` && \
 rm -rf $MYPREFIX/lib/python*/site-packages/tensorflow/include &&\
 rm -rf $MAMBA_ROOT_PREFIX/envs/openfold/lib/python*/site-packages/tensorflow/include || true &&\
 strip --strip-unneeded $(find /usr/local/cuda-${CUDA_V1}.${CUDA_V2} -type f -name "*.so*") || true &&\
 strip --strip-unneeded $(find  $MAMBA_ROOT_PREFIX -type f -name "*.so*" ! -name "libncurses*.so*" ! -name "libgcc*.so*" ! -name "libgfortran*.so*" ) || true &&\
 dpkg-query -Wf '${Installed-Size}\t${Package}\n' | sort -n | tail -n 100

%environment
#export PATH=/opt/conda/bin:$PATH
    export MYPREFIX=/opt/conda
    export MAMBA_ROOT_PREFIX=$MYPREFIX
    eval "$($MYPREFIX/bin/conda shell.dash hook)"
    eval "$(micromamba shell hook --shell dash)"
    micromamba activate $MAMBA_ROOT_PREFIX/envs/openfold_venv
%runscript
cd /opt/openfold
exec /bin/bash "$@"
%startscript
cd /opt/openfold
exec /bin/bash "$@"
